{
    "compilerOptions": {
      "target": "es2017",
      "baseUrl": "./",
      "rootDir": "src",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "downlevelIteration": true,
      "noUnusedLocals": true,
      "noImplicitAny": false,
      "sourceMap": false,
      "declaration": true,
      "outDir": "./lib"
    },
    "exclude": [ "node_modules","test", "lib"]
  }